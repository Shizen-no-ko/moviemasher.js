{
  "name": "@moviemasher/monorepo",
  "description": "browser-based online video editor and encoding api",
  "homepage": "https://moviemasher.com",
  "type": "module",
  "source": "index",
  "version": "5.0.0",
  "license": "MPL-2.0",
  "author": {
    "name": "Movie Masher",
    "email": "support@moviemasher.com"
  },
  "bugs": {
    "url": "https://github.com/moviemasher/moviemasher.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moviemasher/moviemasher.js.git"
  },
  "scripts": {
    "build-cjs": "npm run build-cjs -w @moviemasher/moviemasher.js",
    "build-client-react": "npm run build -w @moviemasher/client-react",
    "build-client": "run-s build-client-react build-example-react build-example-client-react",
    "build-core-client": "run-s build-esm build-client",
    "build-core-server": "run-s build-cjs build-server",
    "build-core": "npm run build -w @moviemasher/moviemasher.js",
    "build-esm": "npm run build-esm -w @moviemasher/moviemasher.js",
    "build-example-client-react": "npm run build -w example-client-react",
    "build-example-react": "npm run build -w example-react",
    "build-example-server-node": "npm run build -w example-server-node",
    "build-server-node": "npm run build -w @moviemasher/server-node",
    "build-server": "run-s build-server-node build-example-server-node",
    "build-umd": "npm run build-umd -w @moviemasher/moviemasher.js",
    "build": "run-s build-core build-client build-server",
    "develop": "rollup --watch --config dev/rollup/esm.config.js",
    "start": "npm run serve -w example-server-node",
    "test-verbose": "npm run test-verbose -w @moviemasher/moviemasher.js",
    "test-watch": "npm run test-watch -w @moviemasher/moviemasher.js",
    "test": "npm run test -w @moviemasher/moviemasher.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-replace": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^2.0.4",
    "serve": "^13.0.2",
    "typescript": "^4.5.4",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/css-font-loading-module": "^0.0.7",
    "@types/node": "^16.11.19"
  },
  "workspaces": [
    "./dev/workspaces/*",
    "./packages/*"
  ]
}

{
  "label": "Text",
  "type": "theme",
  "id": "com.moviemasher.theme.text",
  "properties": [
    { "defaultValue": "Text" },
    { "name": "size", "defaultValue": 0.3, "min": 0.1, "max": 2.0, "step": 0.01 },
    { "name": "x", "defaultValue": 0, "min": -1.0, "max": 1.0, "step": 0.01 },
    { "name": "y", "defaultValue": 0, "min": -1.0, "max": 1.0, "step": 0.01 },
    { "name": "color", "type": "rgba", "defaultValue": "rgba(255,0,0,1)" },
    { "name": "shadowcolor", "type": "rgba", "defaultValue": "rgba(0,0,0,0)" },
    { "name": "shadowx", "defaultValue": 0.015, "min": -0.5, "max": 0.5, "step": 0.0001 },
    { "name": "shadowy", "defaultValue": 0.015, "min": -0.5, "max": 0.5, "step": 0.0001 },
    { "name": "background", "type": "rgba", "defaultValue": "rgba(0,0,255,0)" },
    { "name": "fontface", "type": "font" }
  ],
  "filters": [
    {
      "id": "com.moviemasher.filter.color",
      "parameters": [
        {
          "name": "color",
          "value": "background"
        },
        {
          "name": "size",
          "value": "out_size"
        },
        {
          "name": "duration",
          "value": "out_duration"
        },
        {
          "name": "rate",
          "value": "out_rate"
        }
      ]
    },
    { "id": "format", "parameters": [{ "name": "pix_fmts", "value": "rgba" }] },
    {
      "id": "com.moviemasher.filter.drawtext",
      "parameters": [
        {
          "name": "fontcolor",
          "value": "color"
        },
        {
          "name": "shadowcolor",
          "value": "shadowcolor"
        },
        {
          "name": "fontsize",
          "value": "out_height * size"
        },
        {
          "name": "x",
          "value": "out_width * x"
        },
        {
          "name": "y",
          "value": "out_height * y"
        },
        {
          "name": "shadowx",
          "value": "out_width * shadowx"
        },
        {
          "name": "shadowy",
          "value": "out_height * shadowy"
        }
      ]
    }
  ]
}

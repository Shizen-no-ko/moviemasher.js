{
  "compilerOptions": {
    "lib": ["DOM", "ESNext", "ES2020", "ES2019", "ES2018", "ES2017", "ES2016", "ES2015", "ES5"],
    "target": "ESNext",
    "module": "CommonJs",
    "esModuleInterop": true,
    "declaration": false,
    "strict": true,
    "alwaysStrict": false,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "noEmitOnError": false,
  },
  "include": ["server.ts"],
  "exclude": ["**/node_modules/*"]
}

{
  "name": "example-server-node",
  "version": "5.0.0",
  "description": "Movie Masher Node Server Example",
  "author": {
    "name": "Movie Masher",
    "email": "support@moviemasher.com"
  },
  "license": "MPL-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build-ts": "tsc --build",
    "develop": "tsc --watch",
    "serve-esm": "nodemon --experimental-specifier-resolution=node dist/index.js",
    "serve": "nodemon dist/index.js",
    "build-esm": "rollup --config rollup.config.js",
    "build": "run-s clean build-ts link-img copy-icon",
    "clean": "rimraf dist",
    "copy-icon": "cp ../../img/favicon.ico dist",
    "link-img": "ln -s $(cd ../../img ; pwd) dist",
    "link-assets": "ln -s $(cd dev/assets ; pwd) dist"
  },
  "dependencies": {
    "@moviemasher/server-node": "^5.0.0"
  }
}
